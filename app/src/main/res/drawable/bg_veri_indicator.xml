<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF989898"/>
            <size android:height="2dp" android:width="40dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:layout_height="wrap_content" android:shape="rectangle">
            <solid android:color="#FFEAEAEA" />
            <size android:width="40dp" android:height="2dp" />
        </shape>
    </item>
</selector>